{{#if resume.work.length}}
<div class="container work-container">
  {{> title value="Experience"}}

  {{#each resume.work}}
  <section class="item">
    {{> section-header name=this.company }}
    {{#each project}}
    {{> section-header name=this.name }}

    {{#if position}}
      <h4>{{position}}</h4>
    {{/if}}

    {{#if summary}}
      <p class="summary">{{summary}}</p>
    {{/if}}

    {{#if highlights.length}}
      <ul>
        {{#each highlights}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
    {{/if}}
    {{/each}}
  </section>
  {{/each}}
</div>
{{/if}}
