            {{#each highlights}}
            <li>{{.}}</li>
            {{/each}}
          </ul>
          {{/if}}
        </div>
      </div>
      {{else}}
      <div class="each-project">
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
        <div class="about-project">
          {{> project-header name=this.name }}

          {{#if position}}
          {{> position-section name=this.position }}
          {{/if}}

          {{#if summary}}
          <p class="summary">{{summary}}</p>
          {{/if}}

          {{#if highlights.length}}
          <ul class="">
            {{#each highlights}}
