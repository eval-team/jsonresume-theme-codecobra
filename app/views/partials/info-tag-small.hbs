<div class="info-tag-container">
  {{#if icon}}
    <i class="fa {{icon}}"></i>
  {{/if}}

  {{#if url}}
    <h6 class="info-text lowercase">
      <a href="{{url}}" target="_blank">
        {{removeProtocol text}} <i class="fa fa-external-link" aria-hidden="true"></i>
      </a>
    </h6>
  {{else}}
    <h6 class="info-text lowercase">{{{text}}}</h6>
  {{/if}}
</div>